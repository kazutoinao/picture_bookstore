<div class="container">
  <div class="row">
    <h4 class="col-lg-3 text-center bg-light my-4">配送先登録/一覧</h4>
  </div>
    <%= form_with model: @address,url: addresses_path, local: true do |f| %>
    <div class="row form-group">
      <%= f.label :郵便番号（ハイフンなし）, class:"col-md-3"%>
      <%= f.text_field:postal_code, class:"col-md-3" %>
    </div>
    <div class="row form-group">
      <%= f.label :住所, class:"col-md-3" %>
      <%= f.text_field:address, class: "col-md-6" %>
    </div>
    <div class="row form-group">
      <%= f.label :宛名, class:"col-md-3" %>
      <%= f.text_field:name, class:"col-md-3" %>
      <%= f.submit "新規登録", class: "btn btn-success offset-md-3"%>
    <% end %>
    </div>

    <table class="table table-bordered">
      <thead>
        <tr class="row">
          <th class="col-md-2">郵便番号</th>
          <th class="col-md-5">住所</th>
          <th class="col-md-2">宛名</th>
          <th class="col-md-3"></th>
        </tr>
      </thead>
      <tbody>
        <tr class="row">
          <% @addresses.each do |address| %>
          <td class="col-md-2"><%= address.postal_code%></td>
          <td class="col-md-5"><%= address.address%></td>
          <td class="col-md-2"><%= address.name%></td>
          <td class="col-md-3">
            <%= link_to "編集",edit_address_path(address),class:"btn btn-success" %>
            <%= link_to '削除',address_path(address), class:"btn btn-success", method: :delete %>
          </td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
  </div>