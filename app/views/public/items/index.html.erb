  <div class="container">
    <h4 class="header col-lg-2 text-center bg-light my-4 ml-5">商品一覧</h4>
    <div class="d-flex flex-row bd-highlight md-2">
      <% @items. each do |item| %>
      <div class="item mr-5">
        <%= link_to item_path(item) do %>
          <%= attachment_image_tag item, :image, size: "100x100" %>
        <% end %>
        <p><%= item.name %></p>
        <p>作 <%= item.author %></p>
        <p>絵 <%= item.illustrator %></p>
        <p>税抜<%= item.price %>円</p>
      </div>
      <% end %>
    </div>
  </div>