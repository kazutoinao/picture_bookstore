<div class="container">
  <div class="row">
    <h4 class="header col-lg-2 text-center bg-light my-4 ml-5">商品一覧</h4>
  </div>
  <div class="row">
    <div class="col-md-9">
      <h2>商品一覧（）件</h2>
        <% @items. each do |item| %>
        <div class="item mr-5">
          <%= link_to item_path(item) do %>
            <%= attachment_image_tag item, :image, size: "100x100" %>
          <% end %>
          <p><%= item.name %></p>
          <p><%= item.price %></p>
        </div>
        <% end %>
    </div>
  </div>
</div>