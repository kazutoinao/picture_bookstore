<div class="container">
  <div class="row">
    <h4>編集画面</h4>
  </div>

  <div class="row">
    <div class="col-lg-12">
          <%= form_with model: @review,url:item_review_path, local: true do |f| %>
          <div class="form-group">
              <%= f.label :コメント%>
               <%= f.text_field:review_body%>
    　　  　</div>
    　　  　<div class="d-flex">
　　    　  <div><label>評価</label></div>
    　　  　   <div class="review-evaluation" data-score="<%= @review.evaluation %>"></div>
    　　  　</div>

          <div class="actions">
            <%= f.submit "変更を保存" %>
          </div>
          <% end %>
    </div>
  </div>
</div>
<script>
  $('.review-evaluation').empty();
  $('.review-evaluation').raty({
    score: function() {
      return $(this).attr('data-score');
    },
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    scoreName: 'review[evaluation]' //登録するモデル名とカラム名を記述
  });
</script>