<div class="container">
  <div class="row">
    <h4 class="header col-lg-2 text-center bg-light my-4 ml-5">マイページ</h4>
  </div>
  <div class="row">
     <h3 class="mr-3">登録情報</h3>
     <%= link_to "編集する", edit_customers_path, class:"btn btn-success"%>
  </div>

  <table class="my-5 table table-bordered col-md-6 off-set-6">
    <tr>
      <th class="col-md-2">氏名</th>
      <td class="col-md-4"><%=@customer.last_name+@customer.first_name%></td>
    </tr>
     <tr>
      <th class="col-md-2">カナ</th>
      <td class="col-md-4"><%=@customer.last_name_kana+@customer.first_name_kana%></td>
    </tr>
     <tr>
      <th class="col-md-2">郵便番号</th>
      <td class="col-md-4"><%=@customer.postal_code%></td>
    </tr>
     <tr>
      <th class="col-md-2">住所</th>
      <td class="col-md-4"><%=@customer.address%></td>
    </tr>
     <tr>
      <th class="col-md-2">電話番号</th>
      <td class="col-md-4"><%=@customer.telephone_number%></td>
    </tr>
     <tr>
      <th class="col-md-2">メールアドレス</th>
      <td class="col-md-4"><%=@customer.email%></td>
    </tr>
  </table>

  <h3>配送先<%= link_to "一覧を見る",addresses_path(@customer),class:"btn btn-primary btn-lg"%></h3>
  <h3>注文履歴<%= link_to "一覧を見る", orders_path(@customer),class:"btn btn-primary btn-lg"%></h3>