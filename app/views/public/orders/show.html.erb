<div class="container">
  <div class="row">
    <h4 class="header col-lg-2 text-center bg-light my-4 ml-5">注文履歴詳細</h4>
  </div>
  <div class="row">
     <h5>注文情報</h5>
  </div>

  <table class="my-5 table table-bordered col-md-6 off-set-6">
    <tr>
      <th class="col-md-2">注文日</th>
      <td class="col-md-4"><%=@order.created_at%></td>
    </tr>
     <tr>
      <th class="col-md-2">配送先</th>
      <td class="col-md-4"><%=@order.address%></td>
    </tr>
     <tr>
      <th class="col-md-2">支払い方法</th>
      <td class="col-md-4"><%=@order.payment_method_i18n%></td>
    </tr>
  </table>
  <h5>請求情報</h5>
  <table class="my-5 table table-bordered col-md-6 off-set-6">
      <tr>
        <th class="col-md-2">商品合計</th>
        <td class="col-md-4"><%= @order.total_payment %></td>
      </tr>
       <tr>
        <th class="col-md-2">配送料</th>
        <td class="col-md-4"><%= @order.shipping_cost %></td>
      </tr>
       <tr>
        <th class="col-md-2">ご請求額</th>
        <td class="col-md-4"><%= @order.total_payment+@order.shipping_cost %></td>
      </tr>
  </table>
  <h5>注文内容</h5>
  <table class="my-5 table table-bordered col-md-6 off-set-6">
      <tr>
        <th class="col-md-2">商品</th>
        <th class="col-md-2">単価（税込）</th>
        <th class="col-md-2">個数</th>
        <th class="col-md-2">小計</th>
      </tr>
       <% @order_details.each do |order_detail| %>
       <tr>
        <td class="col-md-4"><%= order_detail.item.name %></td>
        <td class="col-md-4"><%= order_detail.item.with_tax_price %></td>
        <td class="col-md-4"><%= order_detail.amount %></td>
        <td class="col-md-4"><%= order_detail.item.with_tax_price*order_detail.amount %></td>
      </tr>
     <% end %>
  </table>
</div>