<div class="container">
  <div class="row">
    <h4 class="header col-lg-2 text-center bg-light my-4 ml-5">注文一覧</h4>
  </div>
  <table class="table table-bordered">
    <thead>
      <tr="row">
        <th class="col-md-3">注文日</th>
        <th class="col-md-5">配送先</th>
        <th class="col-md-2">注文商品</th>
        <th class="col-md-1">支払い金額</th>
        <th class="col-md-1">注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td class="col-md-3">
        <%= order.created_at %>
        </td>
        <td class="col-md-5">
        <%= order.postal_code %>
        <%= order.address %>
        <%= order.name %>
        </td>
        <td class="col-md-2">
        <% @order_details.each do |order_detail| %>
        <%= order_detail.item.name %>
        <% end %>
        </td>
        <td class="col-md-1">
        <%= order.total_payment+order.shipping_cost %>
        </td>
        <td class="col-md-1">
         <%= link_to '表示する', order_path(order), class: "btn btn-success" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>