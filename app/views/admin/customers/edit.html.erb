<div class="container">
  <div class="row">
    <h4 class="header col-lg-4 text-center bg-light my-4 ml-5"><%= @customer.last_name+@customer.first_name %>さんの会員詳細</h4>
  </div>

<div class="row">
    <div class="col-lg-12">
    <%= form_with model: @customer,url: admin_customer_path , local: true do |f| %>
      <div class="form-group">
          <%= f.label :会員ID%>
           <%= f.text_field:id%>
　　　</div>
      <div class="form-group">
        <%= f.label :氏名 %>
        <%= f.text_field:last_name%>
        <%= f.text_field:first_name%>
      </div>
      <div class="form-group">
        <%= f.label :フリガナ %><br/>
        <%= f.text_field:last_name_kana%>
        <%= f.text_field:first_name_kana%>
      </div>
      <div class="form-group">
      　<%= f.label :郵便番号 %><br/>
        <%= f.text_field:postal_code %>
      </div>
       <div class="form-group">
      　<%= f.label :住所 %><br/>
        <%= f.text_field:address %>
      </div>
       <div class="form-group">
      　<%= f.label :電話番号 %><br/>
        <%= f.text_field:telephone_number %>
      </div>
      <div class="form-group">
      　<%= f.label :メールアドレス %><br/>
        <%= f.text_field:email %>
      </div>
      <div class="form-group">
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "有効", {value: true} %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "退会", {value: false} %>
      </div>
      <div class="actions">
        <%= f.submit "変更を保存" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
