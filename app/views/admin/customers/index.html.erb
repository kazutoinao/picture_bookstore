<div class="container">
  <div class="row">
    <h4 class="header col-lg-2 text-center bg-light my-4 ml-5">会員一覧</h4>
  </div>

  <table class="col-lg-10 mx-auto">
    <thead class="thead-light">
      <tr>
        <th>会員id</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to customer.last_name, admin_customer_path(customer) %><%= customer.first_name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.is_deleted ? '退会' : '有効' %></td>
      </tr>
      <% end %>
    </tbody>
 </table>
 <div class="offset-md-5 col-md-2"><%= paginate @customers%></div>