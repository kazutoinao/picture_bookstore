<div class="container">
  <div class="row">
    <h4 class="col-lg-2 text-center bg-light my-4">商品詳細</h4>
  </div>
  <div class="row">
    <div class="col-lg-3">
      <%= attachment_image_tag @item, :image, size:"100x100" %>
    </div>
    <div class="col-lg-offset-1 col-lg-8">
      <table class="table-noborder">
        <!--%= form_with model: @item,url: admin_items_path, local: true do |f| %>-->
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>著者</td>
          <td><%= @item.author %></td>
        </tr>
        <tr>
          <td>画家</td>
          <td><%= @item.illustrator %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
           <td><%= @item.category.name %></td>
        </tr>
        <tr>
          <td>税込価格（税抜価格）</td>
          <td><%= @item.price %>円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td><%= @item.is_active ? '販売中' : '販売停止中' %></td>
        </tr>
      </table>
      <%= link_to "編集",edit_admin_item_path(@item),class:"btn btn-success btn-lg"%>
    </div>
  </div>
</div>