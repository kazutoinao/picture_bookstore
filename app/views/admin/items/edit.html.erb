<div class="container">
  <div class="row">
    <h4 class="col-lg-2 text-center bg-light my-4">商品編集</h4>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <%= form_with model: @item,url: admin_item_path, local: true do |f| %>
      <div class="form-group">
          <%= f.label :商品画像%><br/>
          <%= f.attachment_field:image %>
　　　</div>
      <div class="form-group">
        <%= f.label :商品名 %><br/>
        <%= f.text_field:name %>
      </div>
　　　<div class="form-group">
        <%= f.label :商品説明 %><br/>
        <%= f.text_field:introduction %>
      </div>
      <div class="form-group">
        <%= f.label :ジャンル %><br/>
       <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
      </div>
      <div class="form-group">
      　<%= f.label :税抜価格 %><br/>
        <%= f.text_field:price %>
      </div>
      <div class="form-group">
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "販売中", {value: true} %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "販売停止中", {value: false} %>
      </div>
      <div class="actions">
        <%= f.submit "変更を保存" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
