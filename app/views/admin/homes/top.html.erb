<div class="container">
  <div class="row">
    <h4 class="col-lg-2 text-center bg-light my-4 ml-5">注文履歴一覧</h4>
  </div>

<table class="col-lg-10 mx-auto">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= l order.created_at, format: :short %></td>
      <td><%= link_to order.customer.last_name+order.customer.first_name, admin_order_path(order) %></td>
      <td><%= order.order_details.count %></td>
    </tr>
    <% end %>
  </tbody>
 </table>
</div>